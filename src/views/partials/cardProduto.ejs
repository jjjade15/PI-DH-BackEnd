

<a href="/produto/<%=produto.id_produto%>" class="caixa-anuncio">
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="fac-icon"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
    />
  </svg>
  
  <div class="imagem">
    <img
      src="<%=produto.Imagem.caminho%>"
      alt=""
    />
  </div>
  
  <div class="info-prod">
    <div class="caixa-titulo">
      <h3 class="tit-prod">
        <%=produto.nome %>
      </h3>
    </div>
    <div class="preco"><%=Number(produto.preco).toLocaleString('pt-br',{style:
      'currency', currency: 'BRL'});%></div>
  </div>
  
  <div class="botao-comprar"><button>COMPRAR</button></div>
</a>